[Unit]
Description=PiRogue collector for Suricata alerts
Wants=influxdb.service suricata.service

[Service]
ExecStart=/usr/bin/python3 /usr/share/pirogue/pirogue-eve-collector.py
Environment=PYTHONUNBUFFERED=1
Restart=on-failure
RestartSec=2
Type=notify

[Install]
WantedBy=default.target
Also=pirogue-eve-collector.socket